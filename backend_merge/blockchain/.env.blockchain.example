# Blockchain Integration Environment Variables
# Copy this to .env and fill in your actual values

# ============== BLOCKCHAIN CONFIGURATION ==============
# Sepolia Network RPC URL (from your hardhat config)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Private key for contract interactions (from your hardhat config)
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Deployed contract address (from your deployment)
CONTRACT_ADDRESS=0xFFD840e78695a3faf29e877AF417258b4FAaE435

# Gas settings (optional - will use defaults if not set)
GAS_PRICE_GWEI=20
GAS_LIMIT_BUFFER=50000

# ============== BAFOKA API CONFIGURATION ==============
# Bafoka API Base URL
BAFOKA_BASE_URL=https://sandbox.bafoka.network

# Bafoka API Path Prefix
BAFOKA_API_PREFIX=/api

# API Request Timeout (seconds)
BAFOKA_TIMEOUT=15

# ============== DATABASE CONFIGURATION ==============
# Database URL (keep your existing setting)
DATABASE_URL=sqlite:///whatsapp_app.db

# ============== EXISTING CONFIGURATION ==============
# Keep all your existing environment variables
SECRET_KEY=your_secret_key_here
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
PORT=5000

# ============== INTEGRATION FLAGS ==============
# Enable/disable integrations for testing
ENABLE_BLOCKCHAIN_INTEGRATION=true
ENABLE_BAFOKA_API_INTEGRATION=true
ENABLE_ENHANCED_LOGGING=true

# ============== NETWORK CONFIGURATION ==============
# Network settings for development vs production
NETWORK_ENV=development
CHAIN_ID=11155111

# ============== MONITORING & LOGGING ==============
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=logs/bafoka.log
